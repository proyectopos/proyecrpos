@model Punto_de_venta__POS_.Models.Estado

<h2>Crear Estado</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <input type="hidden" name="PaisId" value="@ViewBag.PaisId" />
    <div class="form-group">
        @Html.LabelFor(model => model.NombreEstado)
        @Html.TextBoxFor(model => model.NombreEstado, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.NombreEstado)
    </div>

    <p>
        <input type="submit" value="Guardar" class="btn btn-primary" />
        @Html.ActionLink("Cancelar", "Back", new { id= @ViewBag.PaisId }, new { @class = "btn btn-default" })
    </p>
}
