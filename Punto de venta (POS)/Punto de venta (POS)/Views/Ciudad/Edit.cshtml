@model Punto_de_venta__POS_.Models.Ciudad

<h2>Editar Ciudad</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.CiudadId)
    @Html.HiddenFor(model => model.EstadoId)

    <div class="form-group">
        @Html.LabelFor(model => model.NombreCiudad)
        @Html.TextBoxFor(model => model.NombreCiudad, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.NombreCiudad)
    </div>

    <p>
        <input type="submit" value="Guardar" class="btn btn-primary" />
        @Html.ActionLink("Cancelar", "Back", new { id = @Model.EstadoId }, new { @class = "btn btn-default" })
    </p>
}