@model Punto_de_venta__POS_.Models.Rol

<h2>Eliminar Rol</h2>

<div>
    <h4>¿Estás seguro de que deseas eliminar este Rol?</h4>
    <h2>@Model.NombreRol</h2>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.CodigoRol)
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
    }
</div>